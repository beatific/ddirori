<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<bean id="context" class="org.beatific.ddirori.context.impl.XmlApplicationContext">
		<constructor-arg>
			<value>org.beatific</value>
		</constructor-arg>
		 <property name="filePath" value="ddirori.xml" />
		 <property name="namespaceAware" value="true" />
		 <property name="validation" value="false" />
	</bean>
	
</beans>
